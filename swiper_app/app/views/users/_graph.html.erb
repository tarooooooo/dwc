
<canvas id="myLineChart"></canvas>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.js"></script>

<script>
var ctx = document.getElementById("myLineChart");
var myLineChart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: ['６日前', '５日前', '４日前', '３日前', '２日前', '1日前', '今日'],
    datasets: [
      {
        label: '投稿した本の数',
        data: [
          
          <%= @six_days_ago_book_count.to_s %>, 
          <%= @five_days_ago_book_count.to_s %>,
          <%= @four_days_ago_book_count.to_s %>,
          <%= @three_days_ago_book_count.to_s %>,
          <%= @two_days_ago_book_count.to_s %>,
          <%= @yesterday_book_count.to_s %>,
          <%= @today_book_count.to_s %>
          
          ],
        borderColor: "rgba(0,0,255,1)",
        backgroundColor: "rgba(0,0,0,0)"
      }
    ],
  },
  options: {
    title: {
      display: true,
      text: '７日間の投稿数比較'
    },
    scales: {
      yAxes: [{
        ticks: {
          suggestedMax: 10,
          suggestedMin: 0,
          stepSize: 1,
          callback: function(value, index, values){
            return  value 
          }
        }
      }]
    },
  }
});
</script>
